<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"    	
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingRight="10dp"
	    android:paddingLeft="10dp"
        >
	    <RelativeLayout 
		    android:id="@+id/currentlayout_gridview"
			android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="match_parent"
	    	>
			<ImageView 
			        android:id="@+id/imageitem_gridview"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:scaleType="center"
			    	android:onClick="goToProductPageGridView"
			        />
			<Button
			    	android:id="@+id/browse_page_popup_button_gridview"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_alignRight="@id/imageitem_gridview"
					android:layout_alignBottom="@id/imageitem_gridview"
				    android:background="@android:color/transparent"
				    />
			<ImageView
		    		android:id="@+id/browse_page_popup_gridview"
		    		android:layout_above="@id/currentlayout_gridview"		        
			        android:visibility="invisible"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:src="@drawable/browsepage_popup_gridview"
			        />
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/currentlayout_gridview2"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="match_parent"
	    	>
			<ImageView 
			        android:id="@+id/imageitem_gridview2"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:scaleType="center"
			    	android:onClick="goToProductPageGridView"
			        />
			<Button
			    	android:id="@+id/browse_page_popup_button_gridview2"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_alignRight="@id/imageitem_gridview2"
					android:layout_alignBottom="@id/imageitem_gridview2"
				    android:background="@android:color/transparent"
				    />
			<ImageView
		    		android:id="@+id/browse_page_popup_gridview2"
		    		android:layout_above="@id/currentlayout_gridview2"		        
			        android:visibility="invisible"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:src="@drawable/browsepage_popup_gridview"
			    	
			        />
		</RelativeLayout>
	</LinearLayout>
	
	
</RelativeLayout>